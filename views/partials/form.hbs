<form class="form-wrapper">
    <div class="row" style="margin-bottom: 1rem;">
        <div class="col">
            <input type="text" class="form-control" placeholder="Full name" id="fullname">
        </div>
        <div class="col">
            <input type="email" class="form-control" placeholder="Email" id="email">
        </div>
    </div>
    <div>
        <textarea class="form-control" rows="6" placeholder="Message" id="message"></textarea>
    </div>
    <div>
        <button type="button" onclick="submitForm()" class="btn submit-btn btn-lg">Submit</button>
    </div>
</form>